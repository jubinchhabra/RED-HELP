<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment"
    android:background="#DCCDCD">

    <!-- TODO: Update blank fragment layout -->


    <FrameLayout
        android:layout_width="380dp"
        android:layout_marginLeft="15dp"
        android:layout_height="250dp"
        android:layout_marginTop="500dp"
        android:background="@color/white">



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/i3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            app:lottie_rawRes="@raw/news1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Items"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_margin="10dp"

            />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:text="More Items"

            android:textSize="20dp" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/i1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="70dp"
            app:lottie_rawRes="@raw/becomedonor"/>


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/i2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="195dp"
            app:lottie_rawRes="@raw/call"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>




        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/i4"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="70dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/bloodbank" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="160dp"
            android:text="Become Donor" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="160dp"
            android:text="News" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="71dp"
            android:layout_height="39dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="160dp"
            android:text="Emergency Numbers" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="160dp"
            android:text="Blood Bank" />


    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@drawable/round">


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93dp"
                android:layout_marginTop="50dp"
                android:text="RED HELP"
                android:textStyle="bold"
                android:textColor="#F4F2F1"
                android:textSize="50dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


    </FrameLayout>
    <FrameLayout
        android:layout_width="370dp"
        android:layout_height="300dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/frame1">


        <Button
            android:id="@+id/button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/button"
            android:drawableRight="@drawable/baseline_search_24"
            android:text="Find Donor" />




        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="260dp"
            android:layout_height="240dp"
            app:lottie_autoPlay="true"
            android:layout_marginLeft="50dp"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/main"/>

    </FrameLayout>





</FrameLayout>
</ScrollView>